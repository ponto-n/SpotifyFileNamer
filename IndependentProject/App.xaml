<Application
    x:Class="IndependentProject.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IndependentProject">

    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="ApplicationTitleTextBlockStyle">
            <Setter Property="Text" Value="MP3 Metadata" />
            <Setter Property="Foreground" Value="{ThemeResource InkToolbarAccentColorThemeBrush}" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="OCR-A BT" />
        </Style>

        <Style TargetType="Button" x:Key="ApplicationAccentedButtonStyle" >
            <Setter Property="Foreground" Value="{ThemeResource InkToolbarAccentColorThemeBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource InkToolbarAccentColorThemeBrush}" />
        </Style>
        
    </Application.Resources>

    

</Application>
